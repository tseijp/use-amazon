    "scripts": {
        "bootstrap": "yarn lerna bootstrap",
        "clean": "yarn lerna clean -y",
        "init": "npm i -g yarn lerna && yarn bootstrap",
        "start": "cd examples/docs && yarn start",
        "build": "cd examples/docs && yarn build",
        "deploy": "cd examples/docs && yarn deploy",
        "rollup": "cd packages/core && yarn  rollup -c",
        "npm": "cd packages/core && yarn publish",
        "cov": "cd packages/core && jest --coverage",
        "watch": "cd packages/core && jest --watch --runInBand",
        "ls": "cd packages/core && npm pack --dry-run"
    },
    "devDependencies": {
        "lerna": "^4.0.0"
    }
