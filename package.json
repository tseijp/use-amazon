{
    "name": "@use-book/root",
    "version": "1.0.0",
    "author": "tsei",
    "license": "MIT",
    "private": true,
    "description": "ðŸ“ša hook that lets you get product info from url or book cover in React",
    "repository": "tseijp/use-book",
    "homepage": "https://github.com/tseijp/use-book#readme",
    "maintainers": [
        "tseijp (https://github.com/tseijp)"
    ],
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "core@latest": "lerna add @docusaurus/core@latest --dev --scope @use-book/docs",
        "preset@latest": "lerna add  @docusaurus/preset-classic@latest --dev --scope @use-book/docs",
        "latest": "yarn run core@latest & yarn run preset@latest",
        "init": "npm i -g yarn lerna && npx lerna bootstrap",
        "start": "lerna exec --scope @use-book/docs -- yarn start",
        "build": "lerna exec --scope @use-book/docs -- yarn build",
        "deploy": "lerna exec --scope @use-book/docs -- yarn deploy",
        "rollup": "lerna exec --scope use-book -- yarn  rollup -c",
        "npm": "lerna exec --scope use-book -- yarn publish",
        "cov": "lerna exec --scope use-book -- jest --coverage",
        "watch": "lerna exec --scope use-book -- jest --watch --runInBand",
        "ls": "lerna exec --scope use-book -- npm pack --dry-run"
    },
    "devDependencies": {
        "lerna": "^4.0.0"
    }
}
